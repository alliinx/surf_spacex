<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="redText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/red_text</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="blackBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="grayText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_56</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="blackText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activeText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tabItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>